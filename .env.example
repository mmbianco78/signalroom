# SignalRoom Environment Variables
# Copy to .env and fill in values

# =============================================================================
# Supabase (Postgres destination)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-password

# =============================================================================
# Temporal (set automatically in Docker, override for Temporal Cloud)
# =============================================================================
# TEMPORAL_ADDRESS=localhost:7233
# TEMPORAL_NAMESPACE=default
# TEMPORAL_TASK_QUEUE=api-tasks

# For Temporal Cloud (API key - preferred):
# TEMPORAL_ADDRESS=region.aws.api.temporal.io:7233
# TEMPORAL_NAMESPACE=your-namespace.account-id
# TEMPORAL_API_KEY=your-api-key

# For Temporal Cloud (mTLS - legacy):
# TEMPORAL_TLS_CERT_PATH=/path/to/client.pem
# TEMPORAL_TLS_KEY_PATH=/path/to/client.key

# =============================================================================
# S3 (for CSV exports)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket
S3_PREFIX=exports/

# =============================================================================
# Notifications
# =============================================================================

# Slack
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_CHANNEL_ID=C0123456789

# Resend (email)
RESEND_API_KEY=re_your_api_key
RESEND_FROM_EMAIL=alerts@yourdomain.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+15551234567

# =============================================================================
# Source APIs
# =============================================================================

# Everflow
EVERFLOW_API_KEY=

# Redtrack
REDTRACK_API_KEY=

# PostHog
POSTHOG_API_KEY=
POSTHOG_PROJECT_ID=
POSTHOG_HOST=https://app.posthog.com  # or your self-hosted URL

# Mautic (self-hosted)
MAUTIC_BASE_URL=https://mautic.yourdomain.com
MAUTIC_CLIENT_ID=
MAUTIC_CLIENT_SECRET=

# Google Sheets (service account JSON path or inline JSON)
GOOGLE_SHEETS_CREDENTIALS_PATH=
# Or: GOOGLE_SHEETS_CREDENTIALS_JSON={"type": "service_account", ...}
